<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="Background">
        <item name="android:background">#9189C7</item>
    </style>

    <style name="TextInput">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="LargeButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#E4E1F5</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#6960A9</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="HugeButton">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#E4E1F5</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#6960A9</item>
        <item name="android:paddingLeft">100dp</item>
        <item name="android:paddingRight">100dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:paddingTop">30dp</item>
    </style>

</resources>
